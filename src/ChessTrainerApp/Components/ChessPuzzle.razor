@inherits ChessPuzzleBase

<div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-7-desktop mdc-layout-grid__cell--span-6-tablet mdc-layout-grid__cell--span-4-phone">
    @if(CurrentPuzzle == null)
    {
        <LoadingSpinner />
    }
    else
    {
        <ChessBoard Engine ="PuzzleEngine"/>
    }
</div>
<div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone">
    <PuzzleInfo Puzzle="CurrentPuzzle" />
</div>
